#!/usr/bin/env bash
#: Title: crc-info - Show the information about the script
#: Date: 2019-04-23
#: Version: 0.1.0
#: Author: "Alex Y" <aleksandryackovlev@yandex.ru>
#: Description: Show the information about the script

crcDirectory="$HOME/.crc"

source "${crcDirectory}/bin/crc-env"

# DESCRIPTION: Print the usage information
# USAGE: usage
showUsageInfo() {
  printf "%s - %s\n" "$scriptName" "$description"
  printf "USAGE: %s\n" "$usage"
}

# DESCRIPTION: Print the version information
# USAGE: version
showVersionInfo() {
  printf "%s version %s\n" "$scriptName" "$version"
  printf "by %s\n" "$author"
}
